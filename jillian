import java.util.Random;
import java.util.Scanner;

public class SpellIt {
    private static int score = 0;
    private static int attempts = 0;
    
    public static void main(String[] args) {
        String[] words = {"pneumonia", "cornelia", "apocalypse", "entrepreneur", "onomatopoeia", "labyrinth", "trypophobia"};
        Random random = new Random();
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to SpellIt. Enjoy!");
        System.out.println("Try to guess the missing letter in the word.");
        
        boolean continueLoop = true;

        while (continueLoop) {
                String word = getRandomWord(words, random);
                int missingIndex = random.nextInt(word.length());

                String missingWord = removeCharAtIndex(word, missingIndex);
                System.out.println("Word: " + missingWord);

                System.out.print("Your guess: ");
                char userGuess = scanner.next().charAt(0);
                attempts++;

                if (userGuess == word.charAt(missingIndex)) {
                System.out.println("Correct! The missing letter is '" + userGuess + "'.");
                score++;
                } else {
                System.out.println("Incorrect. The correct letter is '" + word.charAt(missingIndex) + "'.");
                }
        
        System.out.println("Do you want to play again? (yes/no)");
        String playAgain = scanner.next().toLowerCase();

        if (playAgain.equals("no")) {
                continueLoop = false;
            } else if (playAgain.equals("yes")) {
                continueLoop = true;
            } else {
                System.out.println("Invalid input. Please enter 'yes' or 'no'.");
                System.out.print("Do you want to play again? (yes/no): ");
                String secondInput = scanner.nextLine().toLowerCase();
                
                if (secondInput.equals("no")) {
                    continueLoop = false;
                } else if (secondInput.equals("yes")) {
                    continueLoop = false;
                } else {
                    System.out.println("Invalid input. Exiting the program.");
                    continueLoop = false;
                }  
        }
        
        System.out.println("Your score: " + score);
        System.out.println("Total attempts: " + attempts);
        System.out.println("Thank you for playing. Goodbye!"); 

        }
        
    }
    
    private static String getRandomWord(String[] words, Random random) {
        int index = random.nextInt(words.length);
        return words[index];
    }

    private static String removeCharAtIndex(String str, int index) {
        return str.substring(0, index) + "_" + str.substring(index + 1);
    }
    
}

